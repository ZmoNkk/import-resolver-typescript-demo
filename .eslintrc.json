{
  "parser": "@typescript-eslint/parser",
  "root": true,
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts"]
    }
  },
  "plugins": ["import"],
  "overrides": [
    {
      "files": ["./a/**/*.ts"],
      "parserOptions": {
        "project": "./a/tsconfig.json"
      },
      "settings": {
        "import/resolver": {
          "typescript": {
            "directory": "./a/tsconfig.json"
          }
        }
      }
    },
    {
      "files": ["./b/**/*.ts"],
      "parserOptions": {
        "project": "./b/tsconfig.json"
      },
      "settings": {
        "import/resolver": {
          "typescript": {
            "directory": "./b/tsconfig.json"
          }
        }
      }
    }
  ],
  "rules": {
    "import/no-unresolved": "error"
  }
}
